<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity"
    android:background="@color/darkGrey">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/logo"
            android:layout_alignTop="@id/logo"
            android:layout_alignBottom="@id/logo"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="@string/app_name"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/container"
        android:layout_centerInParent="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/emailBtn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_mail_icon"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:text="continue with email"
            android:textColor="@color/black"
            android:paddingStart="13dp"
            android:background="@drawable/mail_container"
            android:layout_marginBottom="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/google_logo"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:text="continue with Google"
            android:textColor="#696969"
            android:paddingStart="13dp"
            android:background="@drawable/google_icon_container"
            android:layout_marginBottom="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/fb_logo"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:text="continue with Facebook"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:background="@drawable/fbic"
            android:layout_marginBottom="15dp"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/redirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="Don't have an account?" />

            <TextView
                android:id="@+id/logInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/redirectText"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12sp"
                android:textColor="@color/pink"
                android:text="Log In" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>